clf(1);
clf(2);
clf(3);
clf(4);
clf(5);

N=51;
DOMA1IN=[0:1:N-1];
FT_SAMPLING_RATE=8000;
df=(2*(%pi))/FT_SAMPLING_RATE;
FREQ_DOMAIN=[-%pi:df:%pi-df];

scf(1);
subplot(121);
RECTANGULAR=ones(1,N);
plot2d3(DOMAIN,RECTANGULAR);
title("RectangularWindow","fontsize",4);
xlabel("$n$","fontsize",4);
ylabel("$x[n]$","fontsize",4);

subplot(122);
FFT_RECTANGULAR=fftshift((mtlb_fft(RECTANGULAR,FT_SAMPLING_RATE)));
plot2d(FREQ_DOMAIN,20*log10(abs(FFT_RECTANGULAR)));
xgrid(12);
title("FREQUENCYSPECTRUMOFRECTANGULARWINDOW(indB)","fontsize",4);
xlabel("$\Omega\text{(inradians)}$","fontsize",4);
ylabel("$20*log_{10}(W(\Omega))$","fontsize",4);

scf(2);
subplot(121);
HANNING=0.5-0.5*cos((2*%pi*(DOMAIN))/(N-1));
plot2d3(DOMAIN,HANNING);
title("HANNINGWINDOW","fontsize",4);
xlabel("$n$","fontsize",4);
ylabel("$x[n]$","fontsize",4);

subplot(122);
FFT_HANNING=fftshift((mtlb_fft(HANNING,FT_SAMPLING_RATE)));
plot2d(FREQ_DOMAIN,20*log10(abs(FFT_HANNING)));
xgrid(12);
title("FREQUENCYSPECTRUMOFHANNINGWINDOW(indB)","fontsize",4);
xlabel("$\Omega\text{(inradians)}$","fontsize",4);
ylabel("$20*log_{10}(W(\Omega))$","fontsize",4);

scf(3);
subplot(121);
BARLETT=((N-1)/2-abs((DOMAIN)-(N-1)/2))/(N-1);
plot2d3(DOMAIN,BARLETT);
title("BARLETTWINDOW","fontsize",4);
xlabel("$n$","fontsize",4);
ylabel("$x[n]$","fontsize",4);

subplot(122);
FFT_BARLETT=fftshift((mtlb_fft(BARLETT,FT_SAMPLING_RATE)));
plot2d(FREQ_DOMAIN,20*log10(abs(FFT_BARLETT)));
xgrid(12);
title("FREQUENCYSPECTRUMOFBARLETTWINDOW(indB)","fontsize",4);
xlabel("$\Omega\text{(inradians)}$","fontsize",4);
ylabel("$20*log_{10}(W(\Omega))$","fontsize",4);

scf(4);
subplot(121);
HAMMING=0.54-0.46*cos((2*%pi*(DOMAIN))/(N-1));
plot2d3(DOMAIN,HAMMING);
title("HAMMINGWINDOW","fontsize",4);
xlabel("$n$","fontsize",4);
ylabel("$x[n]$","fontsize",4);

subplot(122);
FFT_HAMMING=fftshift((mtlb_fft(HAMMING,FT_SAMPLING_RATE)));
plot2d(FREQ_DOMAIN,20*log10(abs(FFT_HAMMING)));
xgrid(12);
title("FREQUENCYSPECTRUMOFHAMMINGWINDOW(indB)","fontsize",4);
xlabel("$\Omega\text{(inradians)}$","fontsize",4);
ylabel("$20*log_{10}(W(\Omega))$","fontsize",4);

scf(5);
subplot(121);
BLACKMAN=0.42-(0.5*cos((2*%pi*(DOMAIN))/(N-1)))+(0.08*cos((4*%pi*(DOMAIN))/(N-1)));
plot2d3(DOMAIN,BLACKMAN);
title("BLACKMANWINDOW","fontsize",4);
xlabel("$n$","fontsize",4);
ylabel("$x[n]$","fontsize",4);

subplot(122);
FFT_BLACKMAN=fftshift((mtlb_fft(BLACKMAN,FT_SAMPLING_RATE)));
plot2d(FREQ_DOMAIN,20*log10(abs(FFT_BLACKMAN)));
xgrid(12);
title("FREQUENCYSPECTRUMOFBLACKMANWINDOW(indB)","fontsize",4);
xlabel("$\Omega\text{(inradians)}$","fontsize",4);
ylabel("$20*log_{10}(W(\Omega))$","fontsize",4);
