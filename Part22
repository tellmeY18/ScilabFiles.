clf(1);
clf(2);
clf(3);
clf(4);
N = 11;
DOMAIN = [0:1:N-1];
FT_SAMPLING_RATE = 12000;
df = (2*(%pi))/FT_SAMPLING_RATE;
FREQ_DOMAIN = [-%pi : df : %pi - df];
CUTOFF_FREQ = %pi/4;
IDEAL_RESPONSE = zeros(1,FT_SAMPLING_RATE);
IDEAL_RESPONSE (ceil((FT_SAMPLING_RATE/2)-(CUTOFF_FREQ/df)) : ceil((FT_SAMPLING_RATE/2)+(CUTOFF_FREQ/df))) = 1;
scf(1);
plot2d(FREQ_DOMAIN,IDEAL_RESPONSE);
title("IDEAL RESPONSE", "fontsize", 4);
xlabel("$\Omega$", "fontsize", 4);
ylabel("$X[\Omega]$","fontsize", 4);
RECTANGULAR = ones(1,N);
FFT_RECTANGULAR = abs(fftshift((mtlb_fft(RECTANGULAR, FT_SAMPLING_RATE))));
BLACKMAN = 0.42 - (0.5*cos((2*%pi*(DOMAIN))/(N-1))) + (0.08*cos((4*%pi*(DOMAIN))/(N-1)));
FFT_BLACKMAN = abs(fftshift((mtlb_fft(BLACKMAN, FT_SAMPLING_RATE))));
scf(2);
RECTANGULAR_FILTER = convol(FFT_RECTANGULAR, IDEAL_RESPONSE);
RECTANGULAR_FILTER = resize_matrix(RECTANGULAR_FILTER, -1, 24000);
plot2d(RECTANGULAR_FILTER);
title("Rectangular Filter", "fontsize", 4);
xlabel("$\Omega$", "fontsize", 4);
ylabel("$X[\Omega]$","fontsize", 4);
scf(3);
BLACKMAN_FILTER = convol(FFT_BLACKMAN, IDEAL_RESPONSE);
BLACKMAN_FILTER = resize_matrix(BLACKMAN_FILTER, -1, 24000);
plot2d(BLACKMAN_FILTER);
title("Blackman Filter", "fontsize", 4);
xlabel("$\Omega$", "fontsize", 4);
ylabel("$X[\Omega]$","fontsize", 4);
scf(4);
FILE = "D:\Study\S5\DSP\Welcome.wav"
info = wavread(FILE, "info");
[SOUND_WAVE, Fs, bits] = wavread(FILE);
total_time = (info(8)/info(3));
samples = soundsec(total_time, info(3));

SAMPLED_WAVE = SOUND_WAVE(1:6:info(8));
N = 24000;
SAMPLED_WAVE = SAMPLED_WAVE(1:1:N);
DISCRETE_DOMAIN = (1:1:24000);
[FFT_SAMPLE] = fftshift(abs(fft(SAMPLED_WAVE)));
FREQUENCY_DOMAIN = (8000/N) * DISCRETE_DOMAIN;
subplot(311);
plot2d3(FREQUENCY_DOMAIN(1:N/2),FFT_SAMPLE(N/2+ 1:N));
title("Unfiltered Voice Signal", "fontsize", 4);
xlabel("$f\text{ (Hz)}$","fontsize", 4);
subplot(312);
FILTERED_VOICE_RECTANGULAR = FFT_SAMPLE.*RECTANGULAR_FILTER;
plot2d3(FREQUENCY_DOMAIN(1:N/2), FILTERED_VOICE_RECTANGULAR(N/2+ 1:N));
title("Filtered with rectangular filter", "fontsize", 4);
xlabel("$f\text{ (Hz)}$","fontsize", 4);
subplot(313);
FILTERED_VOICE_BLACKMAN = FFT_SAMPLE.*BLACKMAN_FILTER;
plot2d3(FREQUENCY_DOMAIN(1:N/2), FILTERED_VOICE_BLACKMAN(N/2+ 1:N));
title("Filtered with Blackman Filter", "fontsize", 4);
xlabel("$f\text{ (Hz)}$","fontsize", 4);
